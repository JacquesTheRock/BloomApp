<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.bloomgenetics.bloomapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainPage"
            android:label="Bloom - Projects"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddCandidate"
            android:label="Bloom - Add Candidate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CrossInfo"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CurrentCross"
            android:label="Bloom - Current Cross"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CurrentProject"
            android:label="Bloom - Current Project"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Messages"
            android:label="Bloom - Messages"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateAccount"
            android:label="Welcome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Profile"
            android:label="Bloom - Profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Settings"
            android:label="Bloom - Settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewProject"
            android:label="Bloom - New Project"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".NewCross"
            android:label="Bloom - New Cross"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>